{
	"name": "sebkln/ckeditor-wordbreak",
	"type": "typo3-cms-extension",
	"description": "Adds the <wbr> HTML element to CKEditor 5 in TYPO3. If set in a long word, the browser may break a line (without adding a hyphen character). Useful e.g. for long URLs and file paths.",
	"license": [
		"GPL-2.0-or-later"
	],
	"keywords": [
		"ckeditor",
		"typo3",
		"plugin",
		"editor",
		"wbr",
		"linebreak",
		"wordbreak"
	],
	"homepage": "https://www.sebkln.de",
	"authors": [
		{
			"name": "Sebastian Klein",
			"email": "sebastian@sebkln.de",
			"homepage": "https://www.sebkln.de",
			"role": "Developer"
		}
	],
	"require": {
		"typo3/cms-core": ">=12.4.0 <13.4.99",
		"typo3/cms-rte-ckeditor": ">=12.4.0 <13.4.99"
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "ckeditor_wordbreak"
		}
	}
}
